#
# Build stage
#
FROM amazoncorretto:17 AS build
COPY ./ /app
RUN cd /app && ./gradlew build

#
# Package stage
#
FROM amazoncorretto:17-alpine
COPY --from=build /app/build/libs/share-favplace-api-0.0.1-SNAPSHOT.jar share-favplace-api.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","share-favplace-api.jar"]
